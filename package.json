{
  "name": "digicamwm",
  "version": "1.0.2",
  "description": "Digital Camera Watermarking Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "author": "gvoze32",
  "repository": {
    "type": "git",
    "url": "https://github.com/gvoze32/digicamwm.git"
  },
  "license": "ISC",
  "dependencies": {
    "exif-parser": "^0.1.12",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "electron": "^24.8.8",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.digicamwm.app",
    "productName": "DigiCamWM",
    "mac": {
      "category": "public.app-category.photography",
      "target": "dmg",
      "icon": "assets/icons/digicamwm.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/digicamwm.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/digicamwm.png"
    },
    "files": [
      "**/*",
      "!raw/**",
      "!processed/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "gvoze32",
        "repo": "digicamwm"
      }
    ]
  }
}
