{
  "name": "digicamwm",
  "version": "1.0.0",
  "description": "Digital Camera Watermarking Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "exif-parser": "^0.1.12",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "electron": "^24.8.8",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.digicamwm.app",
    "productName": "DigiCamWM",
    "mac": {
      "category": "public.app-category.photography"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "**/*",
      "!raw/**",
      "!processed/**"
    ]
  }
}
