{
  "$schema": "node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DigiCamWM",
  "version": "1.0.7",
  "identifier": "com.digicamwm.app",
  "build": {
    "frontendDist": "./dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run vite:dev",
    "beforeBuildCommand": "npm run vite:build"
  },
  "app": {
    "windows": [
      {
        "title": "DigiCamWM - Photo Watermark Tool",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "assets/models/*": "assets/models/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "nsis": {}
    },
    "linux": {
      "appimage": {}
    }
  }
}
